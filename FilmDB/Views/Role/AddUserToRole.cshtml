@model FilmDB.ViewModels.RolesAndUsers

@{
    ViewData["Title"] = "AddUserToRole";
}

<h1>AddUserToRole</h1>

<h4>RolesAndUsers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserToRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label">Role</label>
                <select asp-for="Roles" class="form-control" asp-items="new SelectList(Model.Roles)">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Users" class="control-label">Gatunek</label>
                <select asp-for="Users" class="form-control" asp-items="new SelectList(Model.Users)">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
